@model ERestaurant.Models.FoodItem

<h2>Delete Food Item</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Food Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food_Name)
        </dd>
    </dl>
    <div class="form-group">
        <label asp-for="Food_Description"></label>
        <input asp-for="Food_Description" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Food_Price"></label>
        <input asp-for="Food_Price" class="form-control" readonly />
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Food_Id" />
        <input type="submit" value="Delete" class="btn btn-danger mt-3" />
        <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
    </form>
</div>
